model User {
    id          String    @id @default(uuid()) @db.Uuid
    name        String?
    gender      Gender?
    dateOfBirth DateTime?
    isActive    Boolean   @default(false)

    avtUrl          String?
    email           String  @unique
    hashingPassword String

    lastSeen DateTime?

    createAt DateTime  @default(now())
    updateAt DateTime  @updatedAt
    deleteAt DateTime?

    sessions     Session[]
    codes        Code[]
    posts        Post[]
    comments     Comment[]
    repComments  RepComment[]
    userRoles    UserRole[]
    user1        PrivateChat[]    @relation("user1Chats")
    user2        PrivateChat[]    @relation("user2Chats")
    sentMessages PrivateMessage[] @relation("SentMessage")
}

enum Gender {
    MALE
    FEMALE
    OTHERS
}
