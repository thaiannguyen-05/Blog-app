model Role {
    id         Int          @id @default(autoincrement())
    name       String       @unique
    createdAt  DateTime     @default(now())
    updateAt   DateTime     @updatedAt
    users      User[]
    permission Permission[]
}

model Permission {
    id          Int      @id @default(autoincrement())
    key         String   @unique
    description String
    createdAt   DateTime @default(now())
    updateAt    DateTime @updatedAt
    roles       Role[]
}
