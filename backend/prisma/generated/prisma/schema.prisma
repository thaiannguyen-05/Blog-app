model Session {
  id                  String   @id @default(uuid()) @map("id") @db.Uuid
  hashingRefreshToken String?  @map("hashing_refreshtoken") @db.VarChar(255)
  userAgent           String   @unique @map("user_agent") @db.VarChar(1000)
  userIp              String?  @map("user_ip") @db.VarChar(100)
  createdAt           DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt           DateTime @updatedAt @map("updated_at") @db.Timestamptz()

  loginedAt  DateTime? @map("logined_at") @db.Timestamptz()
  logoutedAt DateTime? @map("logouted_at") @db.Timestamptz()

  //                  relation
  userId String @map("user_id") @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([userId])
  @@map("session")
}

model Code {
  id        String   @id @default(uuid()) @map("id") @db.Uuid
  code      String   @map("code") @db.VarChar(10)
  type      CodeType @map("type")
  expiresAt DateTime @map("expires_at") @db.Timestamptz()
  isUsed    Boolean  @default(false) @map("is_used")

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz()

  //        relation
  userId String @map("user_id") @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([userId])
  @@index([code, type])
  @@map("code")
}

enum CodeType {
  VERIFY_EMAIL
  RESET_PASSWORD
  CHANGE_EMAIL
}

model Conversation {
  id             String  @id @default(uuid()) @map("id") @db.Uuid
  conversationId String  @unique @map("conversation_id") @db.VarChar(100)
  isGroup        Boolean @default(false) @map("is_group")
  groupName      String? @map("group_name") @db.VarChar(255)

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz()
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz()

  //             relation
  user1Id String @map("user1_id") @db.Uuid
  user1   User   @relation(name: "user1Chats", fields: [user1Id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  user2Id String @map("user2_id") @db.Uuid
  user2   User   @relation(name: "user2Chats", fields: [user2Id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  messages PrivateMessage[]

  lastMessageAt DateTime @updatedAt
  totalMessage  Int      @default(0)

  @@unique([user1Id, user2Id])
  @@index([conversationId])
  @@map("conversation")
}

model PrivateMessage {
  id        String  @id @default(uuid()) @map("id") @db.Uuid
  content   String  @map("content") @db.Text
  isRead    Boolean @default(false) @map("is_read")
  imageUrl  String? @map("image_url") @db.VarChar(500)
  replyToId String? @map("reply_to_id") @db.Uuid

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz()
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz()

  //             relation
  senderId String @map("sender_id") @db.Uuid
  sender   User   @relation(name: "SentMessage", fields: [senderId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  conversationId String       @map("conversation_id") @db.Uuid
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  messageIndex Int @default(0)

  @@index([senderId])
  @@index([conversationId])
  @@index([createdAt])
  @@map("private_message")
}

model Owner {
  id String @id @default(uuid()) @db.Uuid

  nameRole String

  userId String @db.Uuid

  objectId String @db.Uuid

  @@unique([userId, objectId])
}

model Topic {
  id          String  @id @default(uuid()) @map("id") @db.Uuid
  name        String  @unique @map("name") @db.VarChar(255)
  description String? @map("description") @db.Text
  imgUrl      String? @map("img_url") @db.VarChar(500)

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz()
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz()

  //          relation
  postTopics PostTopic[]

  @@index([name])
  @@map("topic")
}

model PostTopic {
  id String @id @default(uuid()) @map("id") @db.Uuid

  postId String @map("post_id") @db.Uuid
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  topicId String @map("topic_id") @db.Uuid
  topic   Topic  @relation(fields: [topicId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz()

  @@unique([postId, topicId])
  @@index([postId])
  @@index([topicId])
  @@map("post_topic")
}

model RecommendPost {
  id String @id @default(uuid()) @map("id") @db.Uuid

  postId String @map("post_id") @db.Uuid
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  score     Float    @map("score") @db.DoublePrecision
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz()

  @@index([postId])
  @@index([score])
  @@map("recommend_post")
}

